extends layout
block content
    .container
        .jumbotron
          form(role='form',action="/login",method="POST")
              div.form-group
                  label(for="email") Email address:
                  input(type="email",id="email").form-control
              div.form-group
                  label(for="pwd") Password:
                  input(type="password",id="password").form-control
              button(type="submit").btn.btn-lg.btn-primary.btn-block Log In